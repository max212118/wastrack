<ul>
  <%@trucks.each do |truck| %>
  <div class="card-truck-view p-3">
    <li><span class="registration-ui-truck"><%= truck.plate_number %></span></li>
    <div class="text-center">
      <h2 class="lh-1"> Mairie : <strong><%=truck.city_hall.name%></strong></h2>
      <p class="lh-1"><strong> Kilometers : </strong><%= truck.kilometers %></p>
    </div>
    <div class="btn-notification-actions btn-position">

      <%= link_to edit_truck_path(truck) do %>
        Edit  <i class="fas fa-pencil-alt"></i>
      <% end %>

      <%= link_to truck_path(truck), method: :delete, data: {confirm: "Etes-vous surs?"} do %>
        Delete  <i class="far fa-trash-alt"></i>
      <% end %>
    </div>
  </div>
  <%end%>
  <div class= "d-flex justify-content-center">
    <%= link_to "Ajouter un camion", new_truck_path, class: 'btn-add-truck' %>
  </div>
</ul>
